{% extends 'base.html.twig' %}

{% block title %}{{ parent()}} | connexion{% endblock %}

{% block body %}
<div class="container">
<h2 clas="mt-4"> Connexion</h2>
{% if error %}
<div class="alert alert-danger">
    {{ error.messagekey|trans(error.messageData, 'security') }}
    </div>
{% endif %}

  {% for message in app.flashes('success') %}
<div class="alert alert-info mt-4">
         {{ message }}
</div>
{% endfor %}
<form action=" {{path('app_security')}} " method="post">
    <div class="form-group">

        <div class="mb-3"> 
        <label for="floatingInput">Email </label>
          <input type="email" class="form-control me-2"  value=" {{ last_username }}"id="floatingInput" placeholder="name@example.com" name="_username">
        </div>

        <div class="">  
          <label for="floatingPassword">Password</label>
          <input type="password" name="_password" class="form-control me-2" id="floatingPassword" placeholder="Password">
        </div>

      </div>
      <button class="btn btn-primary mt-4"  type="submit" > Login </button>
</form>
</div>

{% endblock %}
